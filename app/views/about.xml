<Alloy>
  <Window id='window' class='container' backButtonTitle=''>
    <TabbedBar id='tabbed'>
      <Labels>
        <Label title='Studies' />
        <Label title='Beliefs' />
        <Label title='Pastor' />
        <Label title='Location' />
        <Label title='Socials' />
      </Labels>
    </TabbedBar>
    <View id='schedule' class='content' visible='true'>
      <Label class='title' text='Services' />
      <Label id='servicesText' />
      <Label id='servicesTimes' />
      <Label class='title' text='Additional Studies' top='3%' />
      <Label id='additionalText' />
      <Label id='additionalTimes' />
      <Label class='title' text='English Language Classes' top='3%' />
      <Label id='englishText' />
      <Label id='englishTimes' />
    </View>
    <ScrollView id='beliefs' class='content' visible='false'>
      <Label class='title' text='Our Beliefs' />
      <Label id='beliefsText' />
    </ScrollView>
    <WebView id='pastor' class='content' visible='false' url='https://hope.ie/about-us/our-pastor/' />
    <View id='location' class='content' visible='false'>
      <Label id='addressTitle' class='title' text='Address' height='5%' />
      <Label id='addressLbl' />
      <Label id='emailTitle' class='title' text='Email' height='5%' top='1%' />
      <Label id='emailLbl' />
      <Label id='phoneTitle' class='title' text='Phone Number' height='5%' top='1%' />
      <Label id='phoneLbl' />
      <ImageView id='img' />
      <Label id='mapBtn' onClick='loadMap' />
    </View>
    <View id='socials' class='content' visible='false'>
      <View class='socialCont'>
        <ImageView class='img' image='/images/facebook.png' />
        <Label class='socialLink' onClick='openFacebook' text='View Facebook' />
      </View>
      <View class='socialCont'>
        <ImageView class='img' image='/images/twitter.png' />
        <Label class='socialLink' onClick='openTwitter' text='View Twitter' />
      </View>
      <View class='socialCont'>
        <ImageView class='img' image='/images/youtube.png' />
        <Label class='socialLink' onClick='openYouTube' text='View YouTube' />
      </View>
      <View class='socialCont'>
        <ImageView class='img' image='/images/vimeo.png' />
        <Label class='socialLink' onClick='openVimeo' text='View Vimeo' />
      </View>
    </View>
  </Window>
</Alloy>