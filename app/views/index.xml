<Alloy>
	<NavigationWindow backgroundColor="white">
		<Window class='container' navBarHidden='true'>
			<ImageView id='img' />
			<ScrollView class='cellContainer'>
				<View class='titleView'>
					<ImageView class='title' image='/images/logo.png' />
				</View>

				<View id='spacer' height='10%' />

				<View class='cell' onClick='openSermons'>
					<Label class='button' text='Recent Sermons' />
				</View>

				<View class='cell' onClick='openEvents'>
					<Label class='button' text='Upcoming Events' />
				</View>

				<View class='cell' onClick='createEmail'>
					<Label class='button' text='Prayer Request' />
				</View>

				<View class='cell' onClick='openDonate'>
					<Label class='button' text='Church Giving' />
				</View>

				<View class='cell' onClick='openAbout'>
					<Label class='button' text='Church Information' />
				</View>
			</ScrollView>
		</Window>
	</NavigationWindow>
</Alloy>