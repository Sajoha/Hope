<Alloy>
	<NavigationWindow backgroundColor="white">
		<Window class='container'>
			<ImageView id='img' />
			<ScrollView class='cellContainer'>
				<View class='titleView'>
					<ImageView class='title' image='/images/logo.png' />
				</View>

				<View id='spacer' height='7%' />

				<View class='cell' onClick='openSermons'>
					<Label class='button' text='Sermons' />
				</View>

				<View class='cell' onClick='openEvents'>
					<Label class='button' text='Upcoming Events' />
				</View>

				<View class='cell' onClick='openFind'>
					<Label class='button' text='Find Us' />
				</View>

				<View class='cell' onClick='openAbout'>
					<Label class='button' text='About Us' />
				</View>

				<View class='cell' onClick='openPastor'>
					<Label class='button' text='Our Pastor' />
				</View>
			</ScrollView>
		</Window>
	</NavigationWindow>
</Alloy>