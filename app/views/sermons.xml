<Alloy>
	<Window id='win' class='container' title='Sermons' backgroundColor='white' onOpen='getData'>
		<View layout='vertical'>
			<ListView id='listview' defaultItemTemplate='SermonCell' onItemclick='handleListItemClick'>
				<ListSection id='section' />
				<Templates>
					<ItemTemplate name='SermonCell'>
						<View class='cell'>
							<Label class='title' bindId='sermon' />
							<View class='data'>
								<Label class='label' bindId='preacher' />
								<Label class='label' bindId='passage' />
							</View>
						</View>
					</ItemTemplate>
				</Templates>
				<RefreshControl id="refresh" onRefreshstart="refreshData" />
			</ListView>
		</View>
		<ActivityIndicator id="activityIndicator" message="Loading..." middle='0' />
	</Window>
</Alloy>